<%= render 'shared/navbar2' %>
<div class="container d-flex mt-4 justify-content-center vh-100 list-show">
    <h1> Your list </h1>
    <%= link_to 'add a bookmark', new_list_bookmark_path(@list), class:"btn btn-primary blue-button" %>
      <% @list.bookmarks.each do |bookmark|%>
        <h2>Movie Title: <%= bookmark.movie.title %> </h2>
          <h5> description: <%= bookmark.comment %> </h5>
          <h5> Movie Rating: <%= bookmark.movie.rating %> </h5>
          <h5> More Details: <%= bookmark.movie.overview %> </h5>
          <div class="container justify-content-center mt-4">
          <%= link_to 'delete this bookmark', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: ' btn btn-primary blue-button mb-4' %>
          </div>
      <% end %>
  </div>
</div>
